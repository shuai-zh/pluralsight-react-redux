{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Mocha Tests",
      "type": "node",
      "protocol": "inspector",
      "request": "launch",
      "stopOnEntry": false,
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": ["--reporter", "spec", "buildScripts/testSetup.js", "src/**/*.test.js", "--colors"],
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true,
      "runtimeExecutable": null,
      "runtimeArgs": ["--nolazy"]
    }
  ]
}
